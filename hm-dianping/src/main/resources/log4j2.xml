<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <loggers>
        <root level="INFO">
            <appender-ref ref="myspringlog"/>
        </root>
    </loggers>

    <appenders>
        <console name="myspringlog" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss SSS} [%t] %-3leve %logger{1024} - %msg%n"/>
        </console>
    </appenders>

</configuration>